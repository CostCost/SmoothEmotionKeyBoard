<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/frame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="bottom"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_above="@+id/container"
        android:id="@+id/bar_container"
        android:background="#FBCEB1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <Button
            android:id="@+id/btnKeyBoard"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="键盘"
            />
        <Button
            android:id="@+id/btnSmile"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="表情"
            />
        <Button
            android:id="@+id/btnOther"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="其它"
            />

    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <com.cpoopc.smoothemojikeyboard.emotion.view.EmotionPager
            android:id="@+id/smiley"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--<com.cpoopc.smoothemojikeyboard.smiley.view.SmileyGrid-->
            <!--android:id="@+id/smiley"-->
            <!--android:visibility="gone"-->
            <!--android:background="#008000"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->
        <View
            android:id="@+id/otherView"
            android:visibility="gone"
            android:background="#209280"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>